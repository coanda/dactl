# --enable-xml-backend=yes/no
AC_ARG_ENABLE([xml-backend],
              [AS_HELP_STRING([--enable-xml-backend=@<:@yes/no@:>@],
                              [Build a backend that uses an XML writer.])],
              [enable_xml_backend=$enableval],
              [enable_xml_backend=yes])

# for if ENABLE_XML_BACKEND in Makefile.am
AM_CONDITIONAL(ENABLE_XML_BACKEND, test x$enable_xml_backend != xno)

# Ensure our makefile is generated by autoconf
AC_CONFIG_FILES([src/backends/xml/Makefile])
