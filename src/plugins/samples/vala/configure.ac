# --enable-vala-plugin=yes/no
AC_ARG_ENABLE([vala-plugin],
              [AS_HELP_STRING([--enable-vala-plugin=@<:@yes/no@:>@],
                              [Build a sample Vala plugin.])],
              [enable_vala_plugin=$enableval],
              [enable_vala_plugin=yes])

# for if ENABLE_VALA_PLUGIN in Makefile.am
AM_CONDITIONAL(ENABLE_VALA_PLUGIN, test x$enable_vala_plugin != xno)

# Ensure our makefile is generated by autoconf
AC_CONFIG_FILES([src/plugins/samples/vala/Makefile])
